{{! Post file }}
{{!< default}}

<main class="contet" role="main">

  <article class="{{post_class}}">

    <header class="post-header">
      <a href="" class="blog-logo">
        {{#if @blog.logo}}
          <img src="{{@blog.logo}}" alt="Blog..">
        {{else}}
          <span class="blog-title">{{@blog.title}}</span>
        {{/if}}
      </a>
    </header>

    {{#post}}
    <span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MM YYYY"}}</time> {{tags prefix="on "}}</span>

    <h1 class="post-title">{{{title}}}</h1>

    <section class="post-content">
      {{content}}
    </section>
    {{/post}}

  </article>

</main>